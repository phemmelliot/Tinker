<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#5b716c"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick the right answer below"
        android:layout_marginLeft="35dp"
        android:textSize="25dp"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        android:textStyle="bold"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/gotten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="30dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textColor="#080808"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="30dp"
                    android:layout_marginLeft="3dp"
                    android:textColor="#3c5fd1"
                    />
                <TextView
                    android:id="@+id/attempt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="30dp"
                    android:layout_marginLeft="3dp"
                    android:textColor="#080808"

                    />
            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="30dp"
                android:textColor="#080808"
                android:layout_gravity="right"
                android:layout_marginLeft="200dp"

                />
                </LinearLayout>
            <TextView
                android:id="@+id/question_text"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="#9a1a09"
                android:layout_marginTop="30dp"
                android:text="3  +  4"
                android:background="#089a23" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <Button
                    android:id="@+id/option_a"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="32dp"
                    android:layout_width="match_parent"
                    android:layout_marginRight="32dp"
                    android:layout_height="60dp"
                    android:text="Option A"
                    android:gravity="center"
                    android:textSize="28dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/round_text_box3"
                    />

                <Button
                    android:id="@+id/option_b"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="32dp"
                    android:text="Option b"
                    android:layout_marginRight="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="28dp"
                    android:background="@drawable/round_text_box3"
                    />

                <Button
                    android:id="@+id/option_c"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Option c"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:layout_marginRight="32dp"
                    android:textSize="28dp"
                    android:background="@drawable/round_text_box3"
                    />

                <Button
                    android:id="@+id/option_d"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="32dp"
                    android:text="Option d"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginRight="32dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="28dp"
                    android:background="@drawable/round_text_box3"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>